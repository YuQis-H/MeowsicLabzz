@page "/musicdiscovery"

<header class="md-header" role="banner" aria-label="Music discovery header">
    <div class="md-header-inner">
        <div class="md-icon" aria-hidden="true">
            <!-- simple music note icon that follows currentColor -->
            <svg viewBox="0 0 24 24" width="40" height="40" fill="none" xmlns="http://www.w3.org/2000/svg" focusable="false">
                <path d="M12 3v10.55A4 4 0 1 0 14 17V7h4V3h-6z" fill="currentColor"/>
            </svg>
        </div>

        <div class="md-titles">
            <h1 class="md-title">Music Discovery</h1>
            <p class="md-subtitle">Explore trending tracks tailored to your mood.</p>
        </div>

        <div class="md-cta" aria-hidden="true">
            <span class="md-tag">New</span>
        </div>
    </div>
</header>

<!-- Today's Trendings board -->
<section class="trending-board" aria-label="Today's Trendings">
    <h2 class="trending-heading">Today's Trendings:</h2>

    <ul class="trending-list" role="list">
        <li class="trending-item">
            <a class="trending-link" href="https://www.youtube.com/watch?v=DyDfgMOUjCI" target="_blank" rel="noopener noreferrer">Bad Guy</a>
            <div class="track-artist">Billie Eilish</div>
        </li>

        <li class="trending-item">
            <a class="trending-link" href="https://www.youtube.com/watch?v=APB-AKpnKT4" target="_blank" rel="noopener noreferrer">MANIAC</a>
            <div class="track-artist">Stray Kids</div>
        </li>

        <li class="trending-item">
            <a class="trending-link" href="https://www.youtube.com/watch?v=iP6XpLQM2Cs" target="_blank" rel="noopener noreferrer">Tik Tok</a>
            <div class="track-artist">Ke$ha</div>
        </li>
    </ul>
</section>

<main class="md-content">
    <section>
        <p>Explore trending tracks based on your mood here!</p>
    </section>

    <!-- Simple search form that submits to YouTube results (no server code required) -->
    <form class="mb-3" action="https://www.youtube.com/results" method="get" target="_blank" role="search">
        <div class="input-group">
            <input name="search_query" class="form-control" type="search" placeholder="Search YouTube for tracks or artists..." aria-label="Search" />
            <button class="btn btn-primary" type="submit">Search YouTube</button>
        </div>
    </form>
</main>

<style>
/* Header: full-width banner with adjustable gradient and accessible layout */
.md-header {
    width: 100%;
    box-sizing: border-box;
    padding: 1.25rem 1.5rem;
    background: var(--md-header-bg, linear-gradient(90deg, #7C4DFF 0%, #FF6B94 100%));
    color: var(--md-header-color, #ffffff);
    border-radius: 8px;
    margin-bottom: 1rem;
}

.md-header-inner {
    display: flex;
    align-items: center;
    gap: 1rem;
    max-width: 1100px;
    margin: 0 auto;
}

/* icon container keeps background transparent so no yellow box */
.md-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    border-radius: 12px;
    background: rgba(255,255,255,0.08);
    color: var(--md-icon-color, #fff);
    flex: 0 0 auto;
    box-shadow: 0 6px 18px rgba(0,0,0,0.08);
}

/* titles take the remaining space */
.md-titles {
    flex: 1 1 auto;
    min-width: 0;
}

.md-title {
    margin: 0 0 0.25rem 0;
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.1;
    color: inherit;
}

.md-subtitle {
    margin: 0;
    font-size: 0.95rem;
    color: rgba(255,255,255,0.9);
}

/* small CTA / tag on the right */
.md-cta {
    flex: 0 0 auto;
}
.md-tag {
    display:inline-block;
    padding: .25rem .6rem;
    border-radius: 999px;
    background: rgba(255,255,255,0.12);
    color: var(--md-tag-color, #fff);
    font-weight: 600;
    font-size: .8rem;
}

/* Trending board - bordered list of tracks */
.trending-board {
    max-width: 1100px;
    margin: 0 auto 1rem;
    padding: 0.9rem 1rem;
    border: 1px solid rgba(0,0,0,0.08);
    border-radius: 8px;
    background: rgba(255,255,255,0.02);
    box-sizing: border-box;
}

.trending-heading {
    margin: 0 0 .6rem 0;
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--md-header-color, #fff);
}

/* list styling */
.trending-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.55rem;
}

.trending-item {
    display: flex;
    flex-direction: column;
    padding: 0.45rem;
    border-radius: 6px;
    transition: background-color 0.12s ease;
}

.trending-item:hover {
    background: rgba(255,255,255,0.03);
}

.trending-link {
    color: inherit;
    font-weight: 600;
    text-decoration: none;
    font-size: 0.98rem;
}

.trending-link:hover,
.trending-link:focus {
    text-decoration: underline;
    outline: none;
}

.track-artist {
    font-size: 0.88rem;
    color: rgba(255,255,255,0.85);
    margin-top: 0.18rem;
}

/* content area */
.md-content {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
}

/* Responsive tweaks */
.md-header {
    padding: 1rem;
}
.md-icon { width:52px; height:52px; }
.md-title { font-size: 1.25rem; }
.md-subtitle { font-size: .9rem; }
</style>