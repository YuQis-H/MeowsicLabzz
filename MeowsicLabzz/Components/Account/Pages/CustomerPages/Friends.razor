@page "/badfriends"

<header class="d-flex align-items-center justify-content-between p-3 mb-4 rounded" style="background: linear-gradient(90deg,#6f42c1,#0d6efd); color:white;">
    <div class="d-flex align-items-center gap-3">
        <div class="d-flex align-items-center justify-content-center rounded-circle" style="width:56px;height:56px;background:rgba(255,255,255,0.12);">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" class="text-white" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M16 11c1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3 1.34 3 3 3z" stroke="currentColor" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M6 20v-1c0-1.66 3.58-3 6-3s6 1.34 6 3v1" stroke="currentColor" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </div>

        <div>
            <h1 class="h4 mb-0">Friends</h1>
            <div class="d-block opacity-75" style="font-size:0.95rem;">Find and follow fellow music lovers here XD.</div>
        </div>
    </div>

    <div class="d-flex align-items-center gap-2">
        <div class="text-white-50 me-2" style="min-width:88px; text-align:right;">
            <div class="small">Connections</div>
            <div class="fw-bold" aria-live="polite">@friendCount</div>
        </div>

        <button class="btn btn-light btn-sm" @onclick="AddFriend">
            <span class="me-1">+</span> Add friend
        </button>
    </div>
</header>

<div class="container-sm">
    <p class="text-muted mb-4">Find and follow fellow music lovers here XD.</p>

    <!-- Example cards (samples) -->
    <div class="row g-3">
        <div class="col-sm-6 col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex gap-3 align-items-center">
                    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width:48px;height:48px;">🐣</div>
                    <div>
                        <div class="fw-semibold friend-name">Chee Peng</div>
                        <div class="text-muted small">Loves indie & chillhop</div>
                    </div>
                    <div class="ms-auto">
                        <button class="btn btn-outline-primary btn-sm">Follow</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex gap-3 align-items-center">
                    <div class="rounded-circle bg-info text-white d-flex align-items-center justify-content-center" style="width:48px;height:48px;">🎧</div>
                    <div>
                        <div class="fw-semibold friend-name">Ding Tan</div>
                        <div class="text-muted small">Jazz & live sets</div>
                    </div>
                    <div class="ms-auto">
                        <button class="btn btn-outline-primary btn-sm">Follow</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- add more sample cards as needed -->
    </div>
</div>

@code {
    private int friendCount = 2;

    private void AddFriend()
    {
        // simple demo action: increment sample count
        friendCount++;
    }
}

<style>
/* Make friend names darker and keep weight */
.friend-name {
    color: #1f2937; /* Dark slate (darker than bootstrap-muted) */
    /* keep fw-semibold for font-weight; override color only */
}
</style>
