@page "/admin/artists"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@attribute [Authorize(Roles = "Administrator")]
@inject MeowsicLabzz.Data.ApplicationDbContext Db
@inject NavigationManager NavigationManager

<h3>🎤 Manage Artists</h3>
<NavLink class="btn btn-secondary mb-3" href="/admin">← Back to Admin</NavLink>

<div class="mb-3">
    <div class="row g-2">
        <div class="col-md-6">
            <input class="form-control" placeholder="New artist name" @bind="newName" />
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="newType">
                <option value="Soloist">Soloist</option>
                <option value="Group">Group</option>
            </select>
        </div>
        <div class="col-md-2">
            <select class="form-select" @bind="newGender">
                <option value="Female">Female</option>
                <option value="Male">Male</option>
				<option value="Mixed">Mixed</option>
            </select>
        </div>
        <div class="col-md-1">
            <button class="btn btn-primary w-100" @onclick="AddArtist">Add</button>
        </div>
    </div>
</div>

@if (artists is null)
{
    <p><em>Loading...</em></p>
}
else if (!artists.Any())
{
    <p>No artists found.</p>
}
else
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Gender</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in artists)
            {
                <tr>
                    <td>@a.Id</td>
                    <td>@a.Name</td>
                    <td>@a.ArtistType</td>
                    <td>@a.Gender</td>
                    <td>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteArtist(a.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<MeowsicLabzz.Components.Domain.Artist>? artists;
    private string? newName;
    private string newType = "Soloist";
    private string newGender = "Mixed";

    protected override async Task OnInitializedAsync()
    {
        await LoadArtists();
    }

    private async Task LoadArtists()
    {
        artists = await Db.Artists.OrderBy(a => a.Id).ToListAsync();
        StateHasChanged();
    }

    private async Task AddArtist()
    {
        if (string.IsNullOrWhiteSpace(newName))
            return;

        var artist = new MeowsicLabzz.Components.Domain.Artist { Name = newName.Trim(), ArtistType = newType, Gender = newGender };
        Db.Artists.Add(artist);
        await Db.SaveChangesAsync();
        newName = string.Empty;
        newType = "Soloist";
        newGender = "Mixed";
        await LoadArtists();
    }

    private async Task DeleteArtist(int id)
    {
        var entity = await Db.Artists.FindAsync(id);
        if (entity is null) return;
        Db.Artists.Remove(entity);
        await Db.SaveChangesAsync();
        await LoadArtists();
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/admin");
    }
}
