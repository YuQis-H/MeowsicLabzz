@page "/admin/artists"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@attribute [Authorize(Roles = "Administrator")]
@inject MeowsicLabzz.Data.ApplicationDbContext Db
@inject NavigationManager NavigationManager

<h3>🎤 Manage Artists</h3>
<button type="button" class="btn btn-secondary mb-3" @onclick="GoBack">← Back to Admin</button>

<div class="mb-3">
 <input class="form-control" placeholder="New artist name" @bind="newName" />
 <button class="btn btn-primary mt-2" @onclick="AddArtist">Add Artist</button>
</div>

@if (artists is null)
{
 <p><em>Loading...</em></p>
}
else if (!artists.Any())
{
 <p>No artists found.</p>
}
else
{
 <table class="table table-sm">
 <thead>
 <tr>
 <th>Id</th>
 <th>Name</th>
 <th></th>
 </tr>
 </thead>
 <tbody>
 @foreach (var a in artists)
 {
 <tr>
 <td>@a.Id</td>
 <td>@a.Name</td>
 <td>
 <button class="btn btn-danger btn-sm" @onclick="() => DeleteArtist(a.Id)">Delete</button>
 </td>
 </tr>
 }
 </tbody>
 </table>
}

@code {
 private List<MeowsicLabzz.Components.Domain.Artist>? artists;
 private string? newName;

 protected override async Task OnInitializedAsync()
 {
 await LoadArtists();
 }

 private async Task LoadArtists()
 {
 artists = await Db.Artists.OrderBy(a => a.Id).ToListAsync();
 StateHasChanged();
 }

 private async Task AddArtist()
 {
 if (string.IsNullOrWhiteSpace(newName))
 return;

 var artist = new MeowsicLabzz.Components.Domain.Artist { Name = newName.Trim() };
 Db.Artists.Add(artist);
 await Db.SaveChangesAsync();
 newName = string.Empty;
 await LoadArtists();
 }

 private async Task DeleteArtist(int id)
 {
 var entity = await Db.Artists.FindAsync(id);
 if (entity is null) return;
 Db.Artists.Remove(entity);
 await Db.SaveChangesAsync();
 await LoadArtists();
 }

 private void GoBack()
 {
 NavigationManager.NavigateTo("/admin");
 }
}
