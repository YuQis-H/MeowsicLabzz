@page "/admin/users/create"
@using Microsoft.AspNetCore.Identity
@using MeowsicLabzz.Data
@using MeowsicLabzz.Components.Domain
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator")]
@inject UserManager<MeowsicLabzzUser> UserManager
@inject RoleManager<IdentityRole> RoleManager
@inject NavigationManager NavigationManager

<h3>Create User (Admin)</h3>
<NavLink class="btn btn-secondary mb-3" href="/admin">? Back to Admin</NavLink>

<div class="border border-3 border-danger p-3 mb-3 rounded">
 <EditForm Model="NewUser" OnValidSubmit="CreateUserAsync">
 <DataAnnotationsValidator />
 <ValidationSummary class="text-danger" />

 <div class="mb-3">
 <label class="form-label">Email</label>
 <InputText class="form-control" @bind-Value="NewUser.Email" />
 </div>
 <div class="mb-3">
 <label class="form-label">Password</label>
 <InputText type="password" class="form-control" @bind-Value="NewPassword" />
 </div>
 <div class="mb-3">
 <label class="form-label">First name</label>
 <InputText class="form-control" @bind-Value="NewUser.FirstName" />
 </div>
 <div class="mb-3">
 <label class="form-label">Last name</label>
 <InputText class="form-control" @bind-Value="NewUser.LastName" />
 </div>

 <button type="submit" class="btn btn-primary">Create</button>
 </EditForm>
</div>

<div>
 <a href="/admin/users">Back to List</a>
</div>

@code {
 private MeowsicLabzzUser NewUser { get; set; } = new MeowsicLabzzUser();
 private string NewPassword { get; set; } = "Pass@123";

 private async Task CreateUserAsync()
 {
 var res = await UserManager.CreateAsync(NewUser, NewPassword);
 if (res.Succeeded)
 {
 NavigationManager.NavigateTo("/admin/users");
 }
 }
}