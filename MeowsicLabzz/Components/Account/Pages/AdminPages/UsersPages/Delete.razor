@page "/admin/users/delete"
@using Microsoft.AspNetCore.Identity
@using MeowsicLabzz.Data
@using MeowsicLabzz.Components.Domain
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator")]
@inject UserManager<MeowsicLabzzUser> UserManager
@inject RoleManager<IdentityRole> RoleManager
@inject NavigationManager NavigationManager

<h3>Delete User (Admin)</h3>

@if (user is null)
{
 <p><em>Loading...</em></p>
}
else
{
 <div>
 <h4>User</h4>
 <dl class="row">
 <dt class="col-sm-2">Email</dt>
 <dd class="col-sm-10">@user.Email</dd>
 </dl>
 <EditForm OnValidSubmit="DeleteAsync">
 <button class="btn btn-danger" type="submit">Delete</button>
 <a class="btn btn-link" href="/admin/users">Back to List</a>
 </EditForm>
 </div>
}

@code {
 [SupplyParameterFromQuery]
 private string Id { get; set; } = string.Empty;
 private MeowsicLabzzUser? user = null;

 protected override async Task OnInitializedAsync()
 {
 user = await UserManager.FindByIdAsync(Id);
 if (user is null) NavigationManager.NavigateTo("/notfound");
 }

 private async Task DeleteAsync()
 {
 await UserManager.DeleteAsync(user!);
 NavigationManager.NavigateTo("/admin/users");
 }
}