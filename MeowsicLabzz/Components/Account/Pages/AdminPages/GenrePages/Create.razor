@page "/admin/genre/create"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator")]
@inject MeowsicLabzz.Data.ApplicationDbContext Db
@inject NavigationManager NavigationManager

<PageTitle>Create Genre (Admin)</PageTitle>

<h3>Create Genre (Admin)</h3>

<div class="card mb-3 p-3 bg-purple">
 <EditForm method="post" Model="GenreModel" OnValidSubmit="AddGenre" FormName="create" Enhance>
 <DataAnnotationsValidator />
 <ValidationSummary class="text-danger" />

 <div class="mb-3">
 <label class="form-label">Id:</label>
 <InputNumber class="form-control bg-light" @bind-Value="GenreModel.Id" Disabled="true" />
 </div>

 <div class="mb-3">
 <label class="form-label">Name:</label>
 <InputText class="form-control" @bind-Value="GenreModel.Name" />
 <ValidationMessage For="() => GenreModel.Name" class="text-danger" />
 </div>

 <button type="submit" class="btn btn-primary">Create</button>
 </EditForm>
</div>

<div>
 <a href="/admin/genres">Back to List</a>
</div>

@code {
 [SupplyParameterFromForm]
 private MeowsicLabzz.Components.Domain.Genre GenreModel { get; set; } = new MeowsicLabzz.Components.Domain.Genre();

 private async Task AddGenre()
 {
 Db.Genres.Add(GenreModel);
 await Db.SaveChangesAsync();
 NavigationManager.NavigateTo("/admin/genres");
 }
}
