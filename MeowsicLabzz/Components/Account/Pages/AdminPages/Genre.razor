@page "/admin/genres"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@attribute [Authorize(Roles = "Administrator")]
@inject MeowsicLabzz.Data.ApplicationDbContext Db
@inject NavigationManager NavigationManager

<h3>🎼 Manage Genres</h3>
<NavLink class="btn btn-secondary mb-3" href="/admin">← Back to Admin</NavLink>

<div class="mb-3">
 <input class="form-control" placeholder="New genre name" @bind="newName" />
 <button class="btn btn-primary mt-2" @onclick="AddGenre">Add Genre</button>
</div>

@if (genres is null)
{
 <p><em>Loading...</em></p>
}
else if (!genres.Any())
{
 <p>No genres found.</p>
}
else
{
 <table class="table table-sm">
 <thead>
 <tr>
 <th>Id</th>
 <th>Name</th>
 <th></th>
 </tr>
 </thead>
 <tbody>
 @foreach (var g in genres)
 {
 <tr>
 <td>@g.Id</td>
 <td>@g.Name</td>
 <td>
 <button class="btn btn-danger btn-sm" @onclick="() => DeleteGenre(g.Id)">Delete</button>
 </td>
 </tr>
 }
 </tbody>
 </table>
}

@code {
 private List<MeowsicLabzz.Components.Domain.Genre>? genres;
 private string? newName;

 protected override async Task OnInitializedAsync()
 {
 await LoadGenres();
 }

 private async Task LoadGenres()
 {
 genres = await Db.Genres.OrderBy(g => g.Id).ToListAsync();
 StateHasChanged();
 }

 private async Task AddGenre()
 {
 if (string.IsNullOrWhiteSpace(newName))
 return;

 var genre = new MeowsicLabzz.Components.Domain.Genre { Name = newName.Trim() };
 Db.Genres.Add(genre);
 await Db.SaveChangesAsync();
 newName = string.Empty;
 await LoadGenres();
 }

 private async Task DeleteGenre(int id)
 {
 var entity = await Db.Genres.FindAsync(id);
 if (entity is null) return;
 Db.Genres.Remove(entity);
 await Db.SaveChangesAsync();
 await LoadGenres();
 }

 private void GoBack()
 {
 NavigationManager.NavigateTo("/admin");
 }
}
