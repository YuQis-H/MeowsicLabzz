@page "/admin/songs/edit"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@using MeowsicLabzz.Data
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@attribute [Authorize(Roles = "Administrator")]
@inject IDbContextFactory<MeowsicLabzz.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<h3>Edit Song (Admin)</h3>

@if (SongModel is null)
{
 <p><em>Loading...</em></p>
}
else
{
 <div class="card mb-3 p-3 bg-purple">
 <EditForm method="post" Model="SongModel" OnValidSubmit="UpdateSong" FormName="edit" Enhance>
 <DataAnnotationsValidator />
 <ValidationSummary class="text-danger" />

 <input type="hidden" name="SongModel.Id" value="@SongModel.Id" />

 <div class="mb-3">
 <label class="form-label">Title:</label>
 <InputText class="form-control" @bind-Value="SongModel.Title" />
 <ValidationMessage For="() => SongModel.Title" class="text-danger" />
 </div>

 <div class="mb-3">
 <label class="form-label">Artist:</label>
 <InputSelect class="form-select" @bind-Value="SongModel.ArtistId">
 <option value="0">Choose...</option>
 @foreach (var a in artists)
 {
 <option value="@a.Id">@a.Name</option>
 }
 </InputSelect>
 </div>

 <div class="mb-3">
 <label class="form-label">Album:</label>
 <InputSelect class="form-select" @bind-Value="SongModel.AlbumId">
 <option value="0">Choose...</option>
 @foreach (var al in albums)
 {
 <option value="@al.Id">@al.Title</option>
 }
 </InputSelect>
 </div>

 <div class="mb-3">
 <label class="form-label">Genre:</label>
 <InputSelect class="form-select" @bind-Value="SongModel.GenreId">
 <option value="0">Choose...</option>
 @foreach (var g in genres)
 {
 <option value="@g.Id">@g.Name</option>
 }
 </InputSelect>
 </div>

 <div class="mb-3">
 <label class="form-label">Duration (sec):</label>
 <InputNumber class="form-control" @bind-Value="SongModel.Duration" />
 </div>

 <button type="submit" class="btn btn-primary">Save</button>
 </EditForm>
 </div>
}

<div>
 <a href="/admin/songs">Back to List</a>
</div>

@code {
 [SupplyParameterFromQuery]
 private int Id { get; set; }

 [SupplyParameterFromForm]
 private MeowsicLabzz.Components.Domain.Song? SongModel { get; set; }

 private List<MeowsicLabzz.Components.Domain.Artist> artists = new();
 private List<MeowsicLabzz.Components.Domain.Album> albums = new();
 private List<MeowsicLabzz.Components.Domain.Genre> genres = new();

 protected override async Task OnInitializedAsync()
 {
 using var context = DbFactory.CreateDbContext();
 artists = await context.Artists.OrderBy(a => a.Name).ToListAsync();
 albums = await context.Albums.OrderBy(a => a.Title).ToListAsync();
 genres = await context.Genres.OrderBy(g => g.Name).ToListAsync();
 SongModel ??= await context.Songs.FirstOrDefaultAsync(s => s.Id == Id);
 if (SongModel is null) NavigationManager.NavigateTo("/notfound");
 }

 private async Task UpdateSong()
 {
 using var context = DbFactory.CreateDbContext();
 context.Attach(SongModel!).State = EntityState.Modified;
 try
 {
 await context.SaveChangesAsync();
 }
 catch (DbUpdateConcurrencyException)
 {
 if (!SongExists(SongModel!.Id))
 {
 NavigationManager.NavigateTo("/notfound");
 }
 else
 {
 throw;
 }
 }

 NavigationManager.NavigateTo("/admin/songs");
 }

 private bool SongExists(int id)
 {
 using var context = DbFactory.CreateDbContext();
 return context.Songs.Any(e => e.Id == id);
 }
}

