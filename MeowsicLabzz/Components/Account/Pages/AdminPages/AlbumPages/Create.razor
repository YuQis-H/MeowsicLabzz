@page "/admin/album/create"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using MeowsicLabzz.Data
@attribute [Authorize(Roles = "Administrator")]
@inject MeowsicLabzz.Data.ApplicationDbContext Db
@inject NavigationManager NavigationManager

<PageTitle>Create Album (Admin)</PageTitle>

<h3>Create Album (Admin)</h3>

<div class="card mb-3 p-3 bg-purple">
 <EditForm method="post" Model="AlbumModel" OnValidSubmit="AddAlbum" FormName="create" Enhance>
 <DataAnnotationsValidator />
 <ValidationSummary class="text-danger" />

 <div class="mb-3">
 <label class="form-label">Id:</label>
 <InputNumber class="form-control bg-light" @bind-Value="AlbumModel.Id" Disabled="true" />
 </div>

 <div class="mb-3">
 <label class="form-label">Title:</label>
 <InputText class="form-control" @bind-Value="AlbumModel.Title" />
 <ValidationMessage For="() => AlbumModel.Title" class="text-danger" />
 </div>

 <div class="mb-3">
 <label class="form-label">Artist:</label>
 <InputSelect class="form-select" @bind-Value="AlbumModel.ArtistId">
 <option value="0">Choose...</option>
 @foreach (var a in artists)
 {
 <option value="@a.Id">@a.Name</option>
 }
 </InputSelect>
 </div>

 <button type="submit" class="btn btn-primary">Create</button>
 </EditForm>
</div>

<div>
 <a href="/admin/albums">Back to List</a>
</div>

@code {
 [SupplyParameterFromForm]
 private MeowsicLabzz.Components.Domain.Album AlbumModel { get; set; } = new MeowsicLabzz.Components.Domain.Album();
 private List<MeowsicLabzz.Components.Domain.Artist> artists = new();

 protected override async Task OnInitializedAsync()
 {
 artists = await Db.Artists.OrderBy(a => a.Name).ToListAsync();
 }

 private async Task AddAlbum()
 {
 Db.Albums.Add(AlbumModel);
 await Db.SaveChangesAsync();
 NavigationManager.NavigateTo("/admin/albums");
 }
}