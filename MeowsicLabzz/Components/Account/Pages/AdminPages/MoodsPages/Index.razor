@page "/admin/moods/index"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using MeowsicLabzz.Components.Domain
@using MeowsicLabzz.Data
@implements IAsyncDisposable
@inject IDbContextFactory<MeowsicLabzz.Data.ApplicationDbContext> DbFactory

<PageTitle>Admin - Moods</PageTitle>

<h3>?? Manage Moods (Admin)</h3>

<NavLink class="btn btn-secondary mb-3" href="/admin">? Back to Admin</NavLink>
<NavLink class="btn btn-primary mb-3 ms-2" href="/admin/moods/create">Create New</NavLink>

<QuickGrid Class="table" Items="context.Moods">
 <PropertyColumn Property="mood => mood.Id" />
 <PropertyColumn Property="mood => mood.Name" />

 <TemplateColumn Context="mood">
 <a href="@($"/admin/moods/edit?id={mood.Id}")">Edit</a> |
 <a href="@($"/admin/moods/details?id={mood.Id}")">Details</a> |
 <a href="@($"/admin/moods/delete?id={mood.Id}")">Delete</a>
 </TemplateColumn>
</QuickGrid>

@code {
 private ApplicationDbContext context = default!;

 protected override void OnInitialized()
 {
 context = DbFactory.CreateDbContext();
 }

 public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
