@page "/recommendations/details"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@inject IDbContextFactory<MeowsicLabzz.Data.MeowsicLabzzContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Recommendations</h2>
    <hr />
    @if (recommendations is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@recommendations.UsersId</dd>
            <dt class="col-sm-2">SongId</dt>
            <dd class="col-sm-10">@recommendations.SongId</dd>
            <dt class="col-sm-2">CreatedAt</dt>
            <dd class="col-sm-10">@recommendations.CreatedAt</dd>
            <dt class="col-sm-2">UpdatedAt</dt>
            <dd class="col-sm-10">@recommendations.UpdatedAt</dd>
            <dt class="col-sm-2">Createdby</dt>
            <dd class="col-sm-10">@recommendations.Createdby</dd>
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@recommendations.UpdatedBy</dd>
        </dl>
        <div>
            <a href="@($"/recommendations/edit?id={recommendations.Id}")">Edit</a> |
            <a href="@($"/recommendations")">Back to List</a>
        </div>
    }
</div>

@code {
    private Recommendations? recommendations;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        recommendations = await context.Recommendations.FirstOrDefaultAsync(m => m.Id == Id);

        if (recommendations is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
