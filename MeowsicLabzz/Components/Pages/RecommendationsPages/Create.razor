@page "/recommendations/create"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@inject IDbContextFactory<MeowsicLabzz.Data.MeowsicLabzzContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Recommendations</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Recommendations" OnValidSubmit="AddRecommendations" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="userid" class="form-label">UserId:</label> 
                <InputNumber id="userid" @bind-Value="Recommendations.UsersId" class="form-control" /> 
                <ValidationMessage For="() => Recommendations.UsersId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="songid" class="form-label">SongId:</label> 
                <InputNumber id="songid" @bind-Value="Recommendations.SongId" class="form-control" /> 
                <ValidationMessage For="() => Recommendations.SongId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdat" class="form-label">CreatedAt:</label> 
                <InputDate id="createdat" @bind-Value="Recommendations.CreatedAt" class="form-control" /> 
                <ValidationMessage For="() => Recommendations.CreatedAt" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedat" class="form-label">UpdatedAt:</label> 
                <InputDate id="updatedat" @bind-Value="Recommendations.UpdatedAt" class="form-control" /> 
                <ValidationMessage For="() => Recommendations.UpdatedAt" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdby" class="form-label">Createdby:</label> 
                <InputText id="createdby" @bind-Value="Recommendations.Createdby" class="form-control" /> 
                <ValidationMessage For="() => Recommendations.Createdby" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedby" class="form-label">UpdatedBy:</label> 
                <InputText id="updatedby" @bind-Value="Recommendations.UpdatedBy" class="form-control" /> 
                <ValidationMessage For="() => Recommendations.UpdatedBy" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/recommendations">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Recommendations Recommendations { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddRecommendations()
    {
        using var context = DbFactory.CreateDbContext();
        context.Recommendations.Add(Recommendations);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/recommendations");
    }
}
