@page "/recommendations/delete"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@inject IDbContextFactory<MeowsicLabzz.Data.MeowsicLabzzContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Recommendations</h2>
    <hr />
    @if (recommendations is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@recommendations.UsersId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SongId</dt>
            <dd class="col-sm-10">@recommendations.SongId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedAt</dt>
            <dd class="col-sm-10">@recommendations.CreatedAt</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedAt</dt>
            <dd class="col-sm-10">@recommendations.UpdatedAt</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Createdby</dt>
            <dd class="col-sm-10">@recommendations.Createdby</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@recommendations.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="recommendations" OnValidSubmit="DeleteRecommendations" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(recommendations is null)">Delete</button> |
            <a href="/recommendations">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Recommendations? recommendations;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        recommendations = await context.Recommendations.FirstOrDefaultAsync(m => m.Id == Id);

        if (recommendations is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteRecommendations()
    {
        using var context = DbFactory.CreateDbContext();
        context.Recommendations.Remove(recommendations!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/recommendations");
    }
}
