@page "/recommendations"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using MeowsicLabzz.Components.Domain
@using MeowsicLabzz.Data
@implements IAsyncDisposable
@inject IDbContextFactory<MeowsicLabzz.Data.MeowsicLabzzContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="recommendations/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Recommendations">
    <PropertyColumn Property="recommendations => recommendations.UsersId" />
    <PropertyColumn Property="recommendations => recommendations.SongId" />
    <PropertyColumn Property="recommendations => recommendations.CreatedAt" />
    <PropertyColumn Property="recommendations => recommendations.UpdatedAt" />
    <PropertyColumn Property="recommendations => recommendations.Createdby" />
    <PropertyColumn Property="recommendations => recommendations.UpdatedBy" />

    <TemplateColumn Context="recommendations">
        <a href="@($"recommendations/edit?id={recommendations.Id}")">Edit</a> |
        <a href="@($"recommendations/details?id={recommendations.Id}")">Details</a> |
        <a href="@($"recommendations/delete?id={recommendations.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private MeowsicLabzzContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
