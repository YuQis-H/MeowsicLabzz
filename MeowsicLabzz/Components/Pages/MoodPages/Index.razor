@page "/moods"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using MeowsicLabzz.Components.Domain
@using MeowsicLabzz.Data
@implements IAsyncDisposable
@inject IDbContextFactory<MeowsicLabzz.Data.ApplicationDbContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="moods/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Moods">
    <PropertyColumn Property="mood => mood.Name" />

    <TemplateColumn Context="mood">
        <a href="@($"moods/edit?id={mood.Id}")">Edit</a> |
        <a href="@($"moods/details?id={mood.Id}")">Details</a> |
        <a href="@($"moods/delete?id={mood.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private ApplicationDbContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
