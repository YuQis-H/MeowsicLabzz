@page "/songs"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using MeowsicLabzz.Components.Domain
@using MeowsicLabzz.Data
@implements IAsyncDisposable
@inject IDbContextFactory<MeowsicLabzz.Data.ApplicationDbContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="songs/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Songs">
    <PropertyColumn Property="song => song.Title" />
    <PropertyColumn Property="song => song.Duration" />
    <PropertyColumn Property="song => song.ArtistId" />
    <PropertyColumn Property="song => song.GenreId" />
    <PropertyColumn Property="song => song.AlbumId" />

    <TemplateColumn Context="song">
        <a href="@($"songs/edit?id={song.Id}")">Edit</a> |
        <a href="@($"songs/details?id={song.Id}")">Details</a> |
        <a href="@($"songs/delete?id={song.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private ApplicationDbContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
