@page "/songs"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using MeowsicLabzz.Components.Domain
@using MeowsicLabzz.Data
@implements IAsyncDisposable
@inject IDbContextFactory<MeowsicLabzz.Data.MeowsicLabzzContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="songs/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Songs">
    <PropertyColumn Property="songs => songs.Title" />
    <PropertyColumn Property="songs => songs.Duration" />
    <PropertyColumn Property="songs => songs.ArtistID" />
    <PropertyColumn Property="songs => songs.AlbumsID" />
    <PropertyColumn Property="songs => songs.CreatedAt" />
    <PropertyColumn Property="songs => songs.UpdatedAt" />
    <PropertyColumn Property="songs => songs.Createdby" />
    <PropertyColumn Property="songs => songs.UpdatedBy" />

    <TemplateColumn Context="songs">
        <a href="@($"songs/edit?id={songs.Id}")">Edit</a> |
        <a href="@($"songs/details?id={songs.Id}")">Details</a> |
        <a href="@($"songs/delete?id={songs.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private MeowsicLabzzContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
