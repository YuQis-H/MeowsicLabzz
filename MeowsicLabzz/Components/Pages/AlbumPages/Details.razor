@page "/albums/details"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@inject IDbContextFactory<MeowsicLabzz.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Album</h2>
    <hr />
    @if (album is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@album.Title</dd>
            <dt class="col-sm-2">ArtistId</dt>
            <dd class="col-sm-10">@album.ArtistId</dd>
            <dt class="col-sm-2">GenreId</dt>
            <dd class="col-sm-10">@album.GenreId</dd>
        </dl>
        <div>
            <a href="@($"/albums/edit?id={album.Id}")">Edit</a> |
            <a href="@($"/albums")">Back to List</a>
        </div>
    }
</div>

@code {
    private Album? album;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        album = await context.Albums.FirstOrDefaultAsync(m => m.Id == Id);

        if (album is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
