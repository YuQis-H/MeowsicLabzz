@page "/albums"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using MeowsicLabzz.Components.Domain
@using MeowsicLabzz.Data
@implements IAsyncDisposable
@inject IDbContextFactory<MeowsicLabzz.Data.ApplicationDbContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="albums/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Albums">
    <PropertyColumn Property="album => album.Title" />
    <PropertyColumn Property="album => album.ArtistId" />
    <PropertyColumn Property="album => album.GenreId" />

    <TemplateColumn Context="album">
        <a href="@($"albums/edit?id={album.Id}")">Edit</a> |
        <a href="@($"albums/details?id={album.Id}")">Details</a> |
        <a href="@($"albums/delete?id={album.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private ApplicationDbContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
