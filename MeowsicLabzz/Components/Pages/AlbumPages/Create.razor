@page "/albums/create"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@using MeowsicLabzz.Components.Domain
@inject IDbContextFactory<MeowsicLabzz.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

@attribute [Authorize(Roles = "Administrator")]
<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Album</h2>
<hr />
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">@errorMessage</div>
}
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Album" OnValidSubmit="AddAlbum" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label> 
                <InputText id="title" @bind-Value="Album.Title" class="form-control" /> 
                <ValidationMessage For="() => Album.Title" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="artistid" class="form-label">ArtistId:</label> 
                <InputNumber id="artistid" @bind-Value="Album.ArtistId" class="form-control" /> 
                <ValidationMessage For="() => Album.ArtistId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="genreid" class="form-label">GenreId:</label> 
                <InputNumber id="genreid" @bind-Value="Album.GenreId" class="form-control" /> 
                <ValidationMessage For="() => Album.GenreId" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/albums">Back to List</a>
</div>

@code {
    private Album Album { get; set; } = new();
    private string? errorMessage;

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddAlbum()
    {
        using var context = DbFactory.CreateDbContext();

        // Optional: validate foreign keys to give clearer feedback instead of DB exception
        var artistExists = await context.Set<MeowsicLabzz.Components.Domain.Artist>().AnyAsync(a => a.Id == Album.ArtistId);
        var genreExists = await context.Set<MeowsicLabzz.Components.Domain.Genre>().AnyAsync(g => g.Id == Album.GenreId);
        if (!artistExists || !genreExists)
        {
            errorMessage = "ArtistId or GenreId not found. Please select valid IDs.";
            return;
        }

        try
        {
            context.Albums.Add(Album);
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo("/albums");
        }
        catch (Exception ex)
        {
            // Surface DB exceptions to UI so you can see why creation failed
            errorMessage = ex.Message;
        }
    }
}
