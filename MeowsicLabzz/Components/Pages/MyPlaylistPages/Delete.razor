@page "/myplaylists/delete"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@inject IDbContextFactory<MeowsicLabzz.Data.MeowsicLabzzContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>MyPlaylist</h2>
    <hr />
    @if (myplaylist is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@myplaylist.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@myplaylist.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UserID</dt>
            <dd class="col-sm-10">@myplaylist.UserID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedAt</dt>
            <dd class="col-sm-10">@myplaylist.CreatedAt</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedAt</dt>
            <dd class="col-sm-10">@myplaylist.UpdatedAt</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Createdby</dt>
            <dd class="col-sm-10">@myplaylist.Createdby</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@myplaylist.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="myplaylist" OnValidSubmit="DeleteMyPlaylist" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(myplaylist is null)">Delete</button> |
            <a href="/myplaylists">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private MyPlaylist? myplaylist;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        myplaylist = await context.MyPlaylist.FirstOrDefaultAsync(m => m.Id == Id);

        if (myplaylist is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteMyPlaylist()
    {
        using var context = DbFactory.CreateDbContext();
        context.MyPlaylist.Remove(myplaylist!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/myplaylists");
    }
}
