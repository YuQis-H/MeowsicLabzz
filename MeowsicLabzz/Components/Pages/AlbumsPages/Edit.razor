@page "/albums/edit"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@inject IDbContextFactory<MeowsicLabzz.Data.MeowsicLabzzContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Albums</h2>
<hr />
@if (Albums is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Albums" OnValidSubmit="UpdateAlbums" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Albums.Id" value="@Albums.Id" />
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <InputText id="title" @bind-Value="Albums.Title" class="form-control" />
                    <ValidationMessage For="() => Albums.Title" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="artistid" class="form-label">ArtistID:</label>
                    <InputNumber id="artistid" @bind-Value="Albums.ArtistID" class="form-control" />
                    <ValidationMessage For="() => Albums.ArtistID" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="genreid" class="form-label">GenreID:</label>
                    <InputNumber id="genreid" @bind-Value="Albums.GenreID" class="form-control" />
                    <ValidationMessage For="() => Albums.GenreID" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="createdat" class="form-label">CreatedAt:</label>
                    <InputDate id="createdat" @bind-Value="Albums.CreatedAt" class="form-control" />
                    <ValidationMessage For="() => Albums.CreatedAt" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="updatedat" class="form-label">UpdatedAt:</label>
                    <InputDate id="updatedat" @bind-Value="Albums.UpdatedAt" class="form-control" />
                    <ValidationMessage For="() => Albums.UpdatedAt" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="createdby" class="form-label">Createdby:</label>
                    <InputText id="createdby" @bind-Value="Albums.Createdby" class="form-control" />
                    <ValidationMessage For="() => Albums.Createdby" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="updatedby" class="form-label">UpdatedBy:</label>
                    <InputText id="updatedby" @bind-Value="Albums.UpdatedBy" class="form-control" />
                    <ValidationMessage For="() => Albums.UpdatedBy" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/albums">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Albums? Albums { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Albums ??= await context.Albums.FirstOrDefaultAsync(m => m.Id == Id);

        if (Albums is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateAlbums()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Albums!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!AlbumsExists(Albums!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/albums");
    }

    private bool AlbumsExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Albums.Any(e => e.Id == id);
    }
}
