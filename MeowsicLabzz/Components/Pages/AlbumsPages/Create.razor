@page "/albums/create"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@inject IDbContextFactory<MeowsicLabzz.Data.MeowsicLabzzContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Albums</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Albums" OnValidSubmit="AddAlbums" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label> 
                <InputText id="title" @bind-Value="Albums.Title" class="form-control" /> 
                <ValidationMessage For="() => Albums.Title" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="artistid" class="form-label">ArtistID:</label> 
                <InputNumber id="artistid" @bind-Value="Albums.ArtistID" class="form-control" /> 
                <ValidationMessage For="() => Albums.ArtistID" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="genreid" class="form-label">GenreID:</label> 
                <InputNumber id="genreid" @bind-Value="Albums.GenreID" class="form-control" /> 
                <ValidationMessage For="() => Albums.GenreID" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdat" class="form-label">CreatedAt:</label> 
                <InputDate id="createdat" @bind-Value="Albums.CreatedAt" class="form-control" /> 
                <ValidationMessage For="() => Albums.CreatedAt" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedat" class="form-label">UpdatedAt:</label> 
                <InputDate id="updatedat" @bind-Value="Albums.UpdatedAt" class="form-control" /> 
                <ValidationMessage For="() => Albums.UpdatedAt" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdby" class="form-label">Createdby:</label> 
                <InputText id="createdby" @bind-Value="Albums.Createdby" class="form-control" /> 
                <ValidationMessage For="() => Albums.Createdby" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedby" class="form-label">UpdatedBy:</label> 
                <InputText id="updatedby" @bind-Value="Albums.UpdatedBy" class="form-control" /> 
                <ValidationMessage For="() => Albums.UpdatedBy" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/albums">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Albums Albums { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddAlbums()
    {
        using var context = DbFactory.CreateDbContext();
        context.Albums.Add(Albums);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/albums");
    }
}
