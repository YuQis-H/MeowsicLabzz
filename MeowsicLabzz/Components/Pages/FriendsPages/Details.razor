@page "/friends/details"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@inject IDbContextFactory<MeowsicLabzz.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Friends</h2>
    <hr />
    @if (friends is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@friends.Name</dd>
            <dt class="col-sm-2">UserID</dt>
            <dd class="col-sm-10">@friends.UserID</dd>
        </dl>
        <div>
            <a href="@($"/friends/edit?id={friends.Id}")">Edit</a> |
            <a href="@($"/friends")">Back to List</a>
        </div>
    }
</div>

@code {
    private Friends? friends;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        friends = await context.Friends.FirstOrDefaultAsync(m => m.Id == Id);

        if (friends is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
