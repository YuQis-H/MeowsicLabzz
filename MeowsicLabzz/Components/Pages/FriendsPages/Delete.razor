@page "/friends/delete"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@inject IDbContextFactory<MeowsicLabzz.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Friends</h2>
    <hr />
    @if (friends is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@friends.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UserID</dt>
            <dd class="col-sm-10">@friends.UserID</dd>
        </dl>
        <EditForm method="post" Model="friends" OnValidSubmit="DeleteFriends" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(friends is null)">Delete</button> |
            <a href="/friends">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Friends? friends;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        friends = await context.Friends.FirstOrDefaultAsync(m => m.Id == Id);

        if (friends is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteFriends()
    {
        using var context = DbFactory.CreateDbContext();
        context.Friends.Remove(friends!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/friends");
    }
}
