@page "/musicdiscoveries/edit"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@inject IDbContextFactory<MeowsicLabzz.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>MusicDiscovery</h2>
<hr />
@if (MusicDiscovery is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="MusicDiscovery" OnValidSubmit="UpdateMusicDiscovery" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="MusicDiscovery.Id" value="@MusicDiscovery.Id" />
                <div class="mb-3">
                    <label for="userid" class="form-label">UserId:</label>
                    <InputNumber id="userid" @bind-Value="MusicDiscovery.UserId" class="form-control" />
                    <ValidationMessage For="() => MusicDiscovery.UserId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="songid" class="form-label">SongId:</label>
                    <InputNumber id="songid" @bind-Value="MusicDiscovery.SongId" class="form-control" />
                    <ValidationMessage For="() => MusicDiscovery.SongId" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/musicdiscoveries">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private MusicDiscovery? MusicDiscovery { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        MusicDiscovery ??= await context.MusicDiscovery.FirstOrDefaultAsync(m => m.Id == Id);

        if (MusicDiscovery is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateMusicDiscovery()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(MusicDiscovery!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!MusicDiscoveryExists(MusicDiscovery!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/musicdiscoveries");
    }

    private bool MusicDiscoveryExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.MusicDiscovery.Any(e => e.Id == id);
    }
}
