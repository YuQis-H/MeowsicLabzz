@page "/musicdiscoveries"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using MeowsicLabzz.Components.Domain
@using MeowsicLabzz.Data
@implements IAsyncDisposable
@inject IDbContextFactory<MeowsicLabzz.Data.ApplicationDbContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="musicdiscoveries/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.MusicDiscovery">
    <PropertyColumn Property="musicdiscovery => musicdiscovery.UserId" />
    <PropertyColumn Property="musicdiscovery => musicdiscovery.SongId" />

    <TemplateColumn Context="musicdiscovery">
        <a href="@($"musicdiscoveries/edit?id={musicdiscovery.Id}")">Edit</a> |
        <a href="@($"musicdiscoveries/details?id={musicdiscovery.Id}")">Details</a> |
        <a href="@($"musicdiscoveries/delete?id={musicdiscovery.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private ApplicationDbContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
