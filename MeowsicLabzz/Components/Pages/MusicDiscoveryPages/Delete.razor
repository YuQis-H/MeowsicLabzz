@page "/musicdiscoveries/delete"
@using Microsoft.EntityFrameworkCore
@using MeowsicLabzz.Components.Domain
@inject IDbContextFactory<MeowsicLabzz.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>MusicDiscovery</h2>
    <hr />
    @if (musicdiscovery is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@musicdiscovery.UserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SongId</dt>
            <dd class="col-sm-10">@musicdiscovery.SongId</dd>
        </dl>
        <EditForm method="post" Model="musicdiscovery" OnValidSubmit="DeleteMusicDiscovery" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(musicdiscovery is null)">Delete</button> |
            <a href="/musicdiscoveries">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private MusicDiscovery? musicdiscovery;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        musicdiscovery = await context.MusicDiscovery.FirstOrDefaultAsync(m => m.Id == Id);

        if (musicdiscovery is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteMusicDiscovery()
    {
        using var context = DbFactory.CreateDbContext();
        context.MusicDiscovery.Remove(musicdiscovery!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/musicdiscoveries");
    }
}
